{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "strict": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "*": [
                "../node_modules/*",
            ]
        }
    },
    "include": [
        "./**/*"
    ]
}